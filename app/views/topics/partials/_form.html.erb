<% if @topic.errors.any? %>
  <div class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-md">
    <h2><%= pluralize(@topic.errors.count, "error") %></h2>
    <ul class="list-disc list-inside mt-2">
      <% @topic.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @topic, class: "contents" do |form| %>
  <div class="my-5">
    <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :name, required: true, autofocus: true, placeholder: "Enter topic name", class: "block rounded-md border border-gray-300 focus:outline-none focus:border-gray-500 px-3 py-2 mt-2 w-full" %>
  </div>

  <div>
    <%= form.submit class: "rounded-md px-3.5 py-2.5 border border-gray-300 hover:bg-gray-50 text-gray-700 font-medium cursor-pointer" %>
  </div>

<% end %>
