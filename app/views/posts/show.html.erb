<%= render 'partials/page_header', title: @post.title, description: "Posted by #{@post.user&.email_address || 'Unknown'}" %>

<div class="mb-4">
  <%= link_to "&larr; Back to posts".html_safe, posts_path, class: "text-sky-600 hover:text-sky-800 text-sm" %>
</div>

<div class="border border-gray-200 rounded-md p-6">
  <div class="prose max-w-none">
    <p class="text-gray-700 whitespace-pre-wrap"><%= @post.content %></p>
  </div>

  <div class="flex items-center gap-4 mt-6 pt-4 border-t border-gray-200 text-sm text-gray-500">
    <span><%= @post.likes || 0 %> likes</span>
    <span><%= @post.dislikes || 0 %> dislikes</span>
    <% if @post.topic %>
      <span>in <%= link_to @post.topic.name, @post.topic.slug, class: "text-sky-600 hover:text-sky-800" %></span>
    <% end %>
    <span class="ml-auto"><%= @post.created_at.strftime("%B %d, %Y") %></span>
  </div>
</div>